<Window x:Class="musiclibraryprog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:musiclibraryprog"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=" 1*"/> <!--Arányokra osztja a Gridet. Ha auto, akkor szövegmérettel egyenlő a sáv.-->
            <RowDefinition Height=" 9*"/>
            <RowDefinition Height=" 1*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="Zeneszámok"/>
        <ListBox Grid.Row="1"/>
        <Grid Grid.Row="2"/>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/> <!--Egyforma szélességű lesz minden gomb.-->
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
        <Button Content="Hozzáadás" Grid.Column="0"/>
        <Button Content="Szerkesztés" Grid.Column="1"/>
        <Button Content="Eltávolítás" Grid.Column="2"/>
        </Grid>
    </Grid>
</Window>
